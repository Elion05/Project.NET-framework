<Window x:Class="MangaBook_WPF.NieuwsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MangaBook_WPF"
        mc:Ignorable="d"
        Title="NieuwsWindow" Height="600" Width="800" Background="{DynamicResource PrussianBlueBrush}" Loaded="Window_Loaded">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="MangaTracker Nieuws Berichten" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" FontWeight="Medium" Margin="0,10,0,20"/>

        <ListBox x:Name="NieuwsListBox"
                 Grid.Row="1"
                 Margin="20"
                 Background="#1C2E4A"
                 BorderBrush="#2E3B55"
                 BorderThickness="1"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 SelectionChanged="NieuwsListBox_SelectionChanged">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#3A4C6A" BorderThickness="1" Padding="20" Margin="0,8,0,8" CornerRadius="12" Background="#243B61">
                        <StackPanel>
                            <TextBlock Text="{Binding Titel}" FontSize="20" FontWeight="Bold" Foreground="#FFD700" TextWrapping="Wrap" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding Datum, StringFormat='{}{0:dd MMM yyyy HH:mm}'}" FontSize="13" Foreground="LightGray" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding Inhoud}" FontSize="15" Foreground="White" TextWrapping="Wrap" Margin="0,6,0,8"/>
                            <TextBlock Text="{Binding Gebruiker.UserName, TargetNullValue='Onbekend'}" FontSize="13" FontWeight="SemiBold" Foreground="LightBlue" HorizontalAlignment="Right" Margin="0,4,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!--Knoppen-->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10,10,0,0">
            <Button x:Name="btnAdd" Content="Toevoegen" Width="100" Click="btnAdd_Click" Height="25"/>
            <Button x:Name="btnEdit" Content="Bewerk" Width="100" Click="btnEdit_Click" IsEnabled="False" Height="25" Margin="5,0,0,0"/>
            <Button x:Name="btnDelete" Content="Verwijder" Width="100" Click="btnDelete_Click" IsEnabled="False" Height="25" Margin="5,0,0,0"/>
        </StackPanel>

        
        <Border Grid.Row="3" Margin="10,15,10,10" Background="WhiteSmoke" CornerRadius="8" Padding="10" Visibility="Collapsed" x:Name="brDetails">
            <Grid x:Name="grDetails">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

             
                <!--Hier edit je de informatie van de NieuwsBerichten-->
                <Label Content="Titel:" Grid.Row="0" Grid.Column="0" Margin="0,5"/>
                <TextBox x:Name="tbTitle" Grid.Row="0" Grid.Column="1" Width="300" Text="{Binding Titel, Mode=TwoWay}"/>

                
                <Label Content="Inhoud:" Grid.Row="1" Grid.Column="0" Margin="0,5"/>
                <TextBox x:Name="tbInhoud" Grid.Row="1" Grid.Column="1" Width="400" Height="80" Text="{Binding Inhoud, Mode=TwoWay}" AcceptsReturn="True" TextWrapping="Wrap"/>

                
                <Button x:Name="btnSave" Content="Opslaan" Width="120" Margin="0,10,0,0" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" Click="btnSave_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
