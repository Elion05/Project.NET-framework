<Window x:Class="MangaBook_WPF.RolesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gebruikersrollen beheren" 
        Height="350" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource PrussianBlueBrush }"
        Foreground="White">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Rollenbeheer"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#FFD700"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10" VerticalAlignment="Center">
            <Label Content="Gebruiker:" VerticalAlignment="Center" FontWeight="Bold" Width="100" Foreground="White"/>
            <ComboBox x:Name="cbUsers" Width="250" Height="28" SelectionChanged="cbUsers_SelectionChanged" Style="{StaticResource DarkComboBoxStyle}"/>
        </StackPanel>

        <Border Grid.Row="2" Background="#2E2E3E" CornerRadius="10" Padding="15">
            <StackPanel>
                <TextBlock Text="Beschikbare Rollen:"  FontWeight="Bold"  Margin="0,0,0,10"  FontSize="16"/>
                <ListBox x:Name="lbRoles" SelectionMode="Multiple" Height="180" Visibility="Collapsed"  SelectionChanged="lbRoles_SelectionChanged" Background="#3A3A4A"  BorderBrush="#555" BorderThickness="1" Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
