<Window x:Class="MangaBook_WPF.AddGenreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MangaBook_WPF"
        mc:Ignorable="d"
        Title="AddGenreWindow" Height="400" Width="600" Background="{DynamicResource PrussianBlueBrush}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <TextBlock Text="Genre Toevoegen" FontSize="24" FontWeight="Bold" HorizontalAlignment="Left" Margin="182,20,0,0" Foreground="{StaticResource ye}"/>

        <Label Content="Genre Naam:" Margin="50,106,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="LightGray"/>
        <TextBox x:Name="tbGenreName" Width="300" Height="25" Margin="0,107,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBlock x:Name="tbErrorMessage" Foreground="Red" Margin="0,150,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <Button x:Name="btnAddGenre" Content="Genre Toevoegen" Width="120" Height="30" Margin="0,0,260,192" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="btnAddGenre_Click"/>


        <Button Content="Sluiten" Width="100" Click="Button_Click" Margin="469,326,31,25"/>
    </Grid>
</Window>
