<Window x:Class="MangaBook_WPF.AuthorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MangaBook_WPF"
        mc:Ignorable="d"
        Title="AuthorWindow" Height="600" Width="880" Background="{DynamicResource YaleBlueBrush}" Loaded="Window_Loaded">


    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>


    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>


        <TextBlock Text="📚 Auteur Informatie" FontSize="28" FontWeight="Bold" Foreground="{StaticResource ye}" TextDecorations="Underline" Margin="0,0,0,15" Grid.ColumnSpan="3"/>


        <!--Informatie van de autheur-->
        <StackPanel VerticalAlignment="Center" Margin="135,0,135,0" Grid.ColumnSpan="2">
            
            <!--//13) Binding-->
            <TextBlock Text="{Binding Name}" FontSize="26"  FontWeight="Bold"  Foreground="#FFD700"/>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Geboortedatum: " FontWeight="Bold"/>
                <TextBlock Text="{Binding geboorteDatum}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Nationaliteit: " FontWeight="Bold"/>
                <TextBlock Text="{Binding Nationaliteit}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Favoriet eten: " FontWeight="Bold"/>
                <TextBlock Text="{Binding favoriteFood}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Favoriete sport: " FontWeight="Bold"/>
                <TextBlock Text="{Binding FavorieteSport}"/>
            </StackPanel>

            <TextBlock Text="Beschrijving:" FontWeight="Bold"  Margin="0,15,0,5"/>
            <TextBox Text="{Binding description}"   AcceptsReturn="True" TextWrapping="Wrap" Background="#3A3A4A" BorderBrush="#555" BorderThickness="1" Foreground="White" Height="150" IsReadOnly="True"/>

            <StackPanel Orientation="Horizontal"  HorizontalAlignment="Right"  Margin="0,20,0,0">
                <Button x:Name="btnEdit" Content="Bewerken" Width="100" Click="BtnEdit_Click" Margin="0,0,10,0"/>
                <Button Content="Sluiten" Width="100" Click="BtnClose_Click"/>
            </StackPanel>
        </StackPanel>

        <!--Edit forum voor de gegevens aan te passen van de Auteur-->
        <Border Grid.Row="2" Margin="0,20,0,0" Background="WhiteSmoke" CornerRadius="8" Padding="10" Visibility="Collapsed" x:Name="brEditAuthorDetails">
            <Grid x:Name="grEditAuthorDetails">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Naam:" Grid.Row="0" Grid.Column="0" Margin="0,10,10,5" Foreground="Black"/>
                <TextBox x:Name="tbEditName" Grid.Row="0" Grid.Column="1" Width="200" Height="25" Margin="0,10,0,5"/>

                <Label Content="Geboortedatum:" Grid.Row="1" Grid.Column="0" Margin="0,10,10,5" Foreground="Black"/>
                <TextBox x:Name="tbEditGeboorteDatum" Grid.Row="1" Grid.Column="1" Width="200" Height="25" Margin="0,10,0,5"/>

                <Label Content="Nationaliteit:" Grid.Row="2" Grid.Column="0" Margin="0,10,10,5" Foreground="Black"/>
                <TextBox x:Name="tbEditNationaliteit" Grid.Row="2" Grid.Column="1" Width="200" Height="25" Margin="0,10,0,5"/>

                <Label Content="Favoriet eten:" Grid.Row="3" Grid.Column="0" Margin="0,10,10,5" Foreground="Black"/>
                <TextBox x:Name="tbEditFavoriteFood" Grid.Row="3" Grid.Column="1" Width="200" Height="25" Margin="0,10,0,5"/>

                <Label Content="Favoriete sport:" Grid.Row="4" Grid.Column="0" Margin="0,10,10,5" Foreground="Black"/>
                <TextBox x:Name="tbEditFavorieteSport" Grid.Row="4" Grid.Column="1" Width="200" Height="25" Margin="0,10,0,5"/>

                <Label Content="Beschrijving:" Grid.Row="5" Grid.Column="0" Margin="0,10,10,5" Foreground="Black"/>
                <TextBox x:Name="tbEditDescription" Grid.Row="5" Grid.Column="1" Width="300" Height="100" Margin="0,10,0,5" AcceptsReturn="True" TextWrapping="Wrap"/>

                <Button x:Name="btnSave" Content="Opslaan" Width="120" Margin="0,10,0,0" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Left" Click="BtnSave_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
