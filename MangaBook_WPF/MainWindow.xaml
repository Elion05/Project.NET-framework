<Window x:Class="MangaBook_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MangaBook Tracker" Height="700" Width="1500"
        Background="{DynamicResource PrussianBlueBrush}" Loaded="Window_Loaded">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <TextBlock Text="📖 MangaBook Tracker"   FontSize="28" FontWeight="Bold" Foreground="{DynamicResource ye}" TextDecorations="Underline" Margin="0,0,0,15"/>


        <!--Login/Logout knop / Profiel knop -->
        <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,10,0">
            <Button x:Name="btnLoginLogout" Content="Login" Width="102" Height="25" Click="btnLoginLogout_Click"/>
            <Button x:Name="btnProfile" Content="Profiel" Width="83" Height="25" Margin="10,0,0,0" Click="btnProfile_Click" Visibility="Collapsed"/>
        </StackPanel>

        <!--DropdownMenu-->
        <Menu VerticalAlignment="Top" Margin="900,12,0,0" Grid.Column="0" HorizontalAlignment="Left">
            <MenuItem Header="Admin Commands" x:Name="menuAdmin" Visibility="Collapsed">
                <MenuItem Header="GebruikersBeheer" Click="GebruikersBeheer_Click"/>
                <MenuItem Header="Auteur Toevoegen" Click="MenuItem_AddAuthor_Click"/>
                <MenuItem Header="Genre Toevoegen" Click="MenuItem_AddGenre_Click"/>
            </MenuItem>
        </Menu>

        <!--Zoekbalk-->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,50,0,10">
            <TextBox x:Name="tbSearch" Width="300" Height="25" Margin="0,0,10,0" TextChanged="tbSearch_TextChanged"/>
        </StackPanel>

        <!--DataGrid-->
        <DataGrid x:Name="MangaGrid" Grid.Row="1" AutoGenerateColumns="False"  IsReadOnly="True" SelectionMode="Single"  CanUserAddRows="False" SelectionChanged="MangaGrid_SelectionChanged" BorderThickness="0" GridLinesVisibility="None" HeadersVisibility="Column" RowHeaderWidth="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Titel" Binding="{Binding Title}" Width="200"/>
                <DataGridTemplateColumn Header="Auteur" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <Hyperlink Click="AuthorName_Click">
                                    <TextBlock Text="{Binding Author.Name}" />
                                </Hyperlink>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>


                <DataGridTemplateColumn Header="Genre" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <Hyperlink Click="GenreName_Click"
                                           DataContext="{Binding}">
                                    <TextBlock Text="{Binding Genre.Name}" />
                                </Hyperlink>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Release Date" Binding="{Binding ReleaseDate, StringFormat={}{0:dd/MM/yyyy}}" Width="150"/>
                <DataGridTextColumn Header="Beschrijving" Binding="{Binding Description}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!--Knoppen-->
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0" Grid.Row="2" >
            <Button x:Name="btnAdd" Content="Toevoegen" Width="100" Click="btnAdd_Click" Height="25"/>
            <Button x:Name="btnEdit" Content="Bewerk" Width="100" Click="btnEdit_Click" IsEnabled="False" Height="25"/>
            <Button x:Name="btnDelete" Content="Verwijder" Width="100" Click="btnDelete_Click" IsEnabled="False" Height="25"/>
        </StackPanel>

        <Border Grid.Row="3" Margin="0,20,0,0" Background="WhiteSmoke" CornerRadius="8" Padding="10"  Visibility="Collapsed" x:Name="brDetails">
            <Grid x:Name="grDetails">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Titel -->
                <Label Content="Titel:" Grid.Row="0" Grid.Column="0" Margin="0,5"/>
                <TextBox x:Name="tbTitle"
                         Grid.Row="0" Grid.Column="1"
                         Width="300"
                         Text="{Binding Title, Mode=TwoWay}"/>

                <!-- Beschrijving -->
                <Label Content="Beschrijving:" Grid.Row="1" Grid.Column="0" Margin="0,5"/>
                <TextBox x:Name="tbDescription"
                         Grid.Row="1" Grid.Column="1"
                         Width="300" Height="60"
                         Text="{Binding Description, Mode=TwoWay}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"/>

                <!-- Auteur -->
                <Label Content="Auteur:" Grid.Row="2" Grid.Column="0" Margin="0,5"/>
                <ComboBox x:Name="tbAuthor" Grid.Row="2" Grid.Column="1" Width="200" DisplayMemberPath="Name" SelectedValuePath="Id" SelectedValue="{Binding AuthorId, Mode=TwoWay}"/>


                <!-- Genre -->
                <Label Content="Genre:" Grid.Row="3" Grid.Column="0" Margin="0,5"/>
                <ComboBox x:Name="cbGenre" Grid.Row="3" Grid.Column="1" Width="200" DisplayMemberPath="Name" SelectedValuePath="Id"  SelectedValue="{Binding GenreId, Mode=TwoWay}"/>

                <!-- Release Date -->
                <Label Content="Release datum:" Grid.Row="4" Grid.Column="0" Margin="0,5"/>
                <DatePicker x:Name="dpRelease" Grid.Row="4" Grid.Column="1" SelectedDate="{Binding ReleaseDate, Mode=TwoWay}"/>

                <!-- Opslaan -->
                <Button x:Name="btnSave" Content="Opslaan" Width="120" Margin="0,10,0,0"  Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left"  Click="btnSave_Click"/>
                <TextBlock x:Name="tbError" Foreground="Red" Margin="0,5,0,0" TextWrapping="Wrap"/>
            </Grid>
        </Border>
    </Grid>
</Window>
