<Window x:Class="MangaBook_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MangaBook Tracker" Height="700" Width="1500"
        Background="{DynamicResource PrussianBlueBrush}" Loaded="Window_Loaded">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        
        <TextBlock Text="📖 MangaBook Tracker"   FontSize="28" FontWeight="Bold" Foreground="LightGray" TextDecorations="Underline" Margin="0,0,0,15"/>

        <!--Login/Logout knop/Registreren knop -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0">
            <Button x:Name="btnRegister" Content="Registreren" Width="100" Height="25" Click="btnRegister_Click" Margin="0,0,5,0"/>
            <Button x:Name="btnLoginLogout" Content="Login" Width="100" Height="25" Click="btnLoginLogout_Click"/>
        </StackPanel>


        <!-- Zoekbalk -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,50,0,10">
            <TextBox x:Name="tbSearch" Width="300" Height="25" Margin="0,0,10,0" TextChanged="tbSearch_TextChanged"/>
        </StackPanel>

        <!--DataGrid-->
        <DataGrid x:Name="MangaGrid" Grid.Row="1" AutoGenerateColumns="False"  IsReadOnly="True" SelectionMode="Single"  CanUserAddRows="False" SelectionChanged="MangaGrid_SelectionChanged" BorderThickness="0" GridLinesVisibility="None" HeadersVisibility="Column" RowHeaderWidth="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="200"/>
                <DataGridTextColumn Header="Author" Binding="{Binding Author.Name}" Width="200"/>
                <DataGridTextColumn Header="Genre" Binding="{Binding Genre.Name}" Width="150"/>
                <DataGridTextColumn Header="Release Date" Binding="{Binding ReleaseDate, StringFormat={}{0:dd/MM/yyyy}}" Width="150"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!--Knoppen-->
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0" Grid.Row="2" >
            <Button x:Name="btnAdd" Content="Toevoegen" Width="100" Click="btnAdd_Click" Height="25"/>
            <Button x:Name="btnEdit" Content="Bewerk" Width="100" Click="btnEdit_Click" IsEnabled="False" Height="25"/>
            <Button x:Name="btnDelete" Content="Verwijder" Width="100" Click="btnDelete_Click" IsEnabled="False" Height="25"/>
        </StackPanel>

        <Border Grid.Row="3" Margin="0,20,0,0" Background="WhiteSmoke" CornerRadius="8" Padding="10"  Visibility="Collapsed" x:Name="brDetails">

            <Grid x:Name="grDetails">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Titel -->
                <Label Content="Titel:" Grid.Row="0" Grid.Column="0" Margin="0,5"/>
                <TextBox x:Name="tbTitle"
                         Grid.Row="0" Grid.Column="1"
                         Width="300"
                         Text="{Binding Title, Mode=TwoWay}"/>

                <!-- Beschrijving -->
                <Label Content="Beschrijving:" Grid.Row="1" Grid.Column="0" Margin="0,5"/>
                <TextBox x:Name="tbDescription"
                         Grid.Row="1" Grid.Column="1"
                         Width="300" Height="60"
                         Text="{Binding Description, Mode=TwoWay}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"/>

                <!-- Auteur -->
                <Label Content="Auteur:" Grid.Row="2" Grid.Column="0" Margin="0,5"/>
                <TextBox x:Name="tbAuthor" Grid.Row="2" Grid.Column="1" Width="300" Text="{Binding Author.Name, Mode=TwoWay}"/>

                <!-- Genre -->
                <Label Content="Genre:" Grid.Row="3" Grid.Column="0" Margin="0,5"/>
                <ComboBox x:Name="cbGenre" Grid.Row="3" Grid.Column="1" Width="200" DisplayMemberPath="Name" SelectedValuePath="Id"  SelectedValue="{Binding GenreId, Mode=TwoWay}"/>

                <!-- Release Date -->
                <Label Content="Release datum:" Grid.Row="4" Grid.Column="0" Margin="0,5"/>
                <DatePicker x:Name="dpRelease" Grid.Row="4" Grid.Column="1" SelectedDate="{Binding ReleaseDate, Mode=TwoWay}"/>

                <!-- Opslaan -->
                <Button x:Name="btnSave" Content="Opslaan" Width="120" Margin="0,10,0,0"  Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left"  Click="btnSave_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
