<Window x:Class="MangaBook_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MangaBook Tracker" Height="600" Width="900">
    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <TextBlock Text="📖MangaBook Tracker" FontSize="28" FontWeight="Bold" HorizontalAlignment="Left" Margin="0,0,0,15"/>

        <!--Datagrid met informatie van de boeken-->
        <DataGrid x:Name="MangaGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" ItemsSource="{Binding}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="200" CanUserSort="False"/>
                <DataGridTextColumn Header="Author" Binding="{Binding Author.Name}" Width="200"  CanUserSort="False"/>
                <DataGridTextColumn Header="Genre" Binding="{Binding Genre.Name}" Width="150"  CanUserSort="False"/>
                <DataGridTextColumn Header="Release Date" Binding="{Binding ReleaseDate, StringFormat={}{0:dd/MM/yyyy}}" Width="150"  CanUserSort="False"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"  CanUserSort="False"/>
            </DataGrid.Columns>
        </DataGrid>

        <!--Buttons : verwijder, wijzig en voegtoe-->
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0" Grid.Row="2">
            <Button x:Name="btnAdd" Content="VoegToe" Width="100" Margin="0,0,10,0" Click="btnAdd_Click"/>
            <Button x:Name="btnEdit" Content="Bewerk" Width="100" Margin="0,0,10,0" Click="btnEdit_Click" IsEnabled="False"/>
            <Button x:Name="btnDelete" Content="Verwijder" Width="100" Click="btnDelete_Click" IsEnabled="False"/>
        </StackPanel>

        <Grid x:Name="grDetails" Margin="0,20,0,0" Visibility="Collapsed" Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            
            
            <Label Content="Titel: " Grid.Row="0" Grid.Column="0" Margin="0,5"/>
            <TextBox x:Name="tbTitle" Grid.Row="0" Grid.Column="1" Width="300" Text="{Binding Title, Mode=TwoWay}"/>


            <Label Content="Beschrijving:" Grid.Row="1" Grid.Column="0" Margin="0,5"/>
            <TextBox x:Name="tbDescription" Grid.Row="1" Grid.Column="1" Width="300" Height="60"
            Text="{Binding Description, Mode=TwoWay}" AcceptsReturn="True" TextWrapping="Wrap"/>

            <Label Content="Auteur:" Grid.Row="2" Grid.Column="0" Margin="0,5"/>
            <TextBox x:Name="tbAuthor" Grid.Row="2" Grid.Column="1" Width="300"
            Text="{Binding Author.Name, Mode=TwoWay}"/>



            <Label Content="Genre:" Grid.Row="3" Grid.Column="0" Margin="0,5"/>
            <ComboBox x:Name="cbGenre" Grid.Row="3" Grid.Column="1" Width="200"
            DisplayMemberPath="Name" SelectedValuePath="Id" 
            SelectedValue="{Binding GenreId, Mode=TwoWay}"/>

            <Label Content="Release datum:" Grid.Row="4" Grid.Column="0" Margin="0,5"/>
            <DatePicker x:Name="dpRelease" Grid.Row="4" Grid.Column="1"
            SelectedDate="{Binding ReleaseDate, Mode=TwoWay}"/>

            <Button x:Name="btnSave" Content="Opslaan" Width="120" Margin="0,10,0,0" 
            Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left"
            Click="btnSave_Click"/>


        </Grid>
        
        
        
    </Grid>
</Window>
