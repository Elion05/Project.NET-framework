<Window x:Class="MangaBook_WPF.GebruikersProfiel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MangaBook_WPF"
        mc:Ignorable="d"
        Title="GebruikersProfiel" Height="450" Width="800">
    <Grid>
        
        <TextBlock Text="👤 Gebruikers Profiel" FontSize="34" HorizontalAlignment="Left" Margin="250,30,0,0" VerticalAlignment="Top"/>
        
        <Label Content="Gebruikersnaam:" Margin="150,100,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="tbGebruikersnaam" Width="300" Height="25" Margin="0,105,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label Content="E-mail:" Margin="150,150,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="tbEmail" Width="300" Height="25" Margin="0,155,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button x:Name="btnSaveProfile" Content="Profiel Opslaan" Width="150" Height="30" Margin="0,0,325,50" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="btnSaveProfile_Click"/>
        
        
    </Grid>
</Window>
