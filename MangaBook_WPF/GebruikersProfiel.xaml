<Window x:Class="MangaBook_WPF.GebruikersProfiel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MangaBook_WPF"
        mc:Ignorable="d"
        Title="GebruikersProfiel" Height="550" Width="880" Loaded="Window_Loaded" Background="{DynamicResource PrussianBlueBrush}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>

        <TextBlock Text="👤 Gebruikers Profiel" FontSize="34" HorizontalAlignment="Left" Margin="250,30,0,0" VerticalAlignment="Top" Foreground="{StaticResource ye}"/>

        <!--Data dat de gebruiker kan aanpassen, de huidige data staat al automatisch in de textboxes-->
        <Label Content="Voornaam:" Margin="89,133,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Foreground="{StaticResource ye}"/>
        <TextBox x:Name="tbVoornaam" Width="300" Height="25" Margin="228,143,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label Content="Achternaam:" Margin="81,170,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Foreground="{StaticResource ye}"/>
        <TextBox x:Name="tbAchternaam" Width="300" Height="24" Margin="228,178,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label Content="Wachtwoord:" Margin="78,207,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Foreground="{StaticResource ye}"/>
        <PasswordBox x:Name="pbWachtwoord" Width="300" Height="25" Margin="228,213,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label Content="Gebruikersnaam:" Margin="62,243,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Foreground="{StaticResource ye}"/>
        <TextBox x:Name="tbGebruikersnaam" Width="300" Height="25" Margin="228,249,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label Content="E-mail:" Margin="141,280,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Foreground="{StaticResource ye}"/>
        <TextBox x:Name="tbEmail" Width="300" Height="25" Margin="228,286,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <Button x:Name="btnSaveProfile" Content="Profiel Opslaan" Width="150" Height="30" Margin="0,0,325,50" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="btnSaveProfile_Click" IsDefault="True"/>


    </Grid>
</Window>
