<Window x:Class="MangaBook_WPF.RegistratieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MangaBook_WPF"
        mc:Ignorable="d"
        Title="RegistratieWindow" Height="600" Width="600" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="{DynamicResource PrussianBlueBrush}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>


    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Nieuwe account aanmaken" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!--gebruikersnaam-->
        <Label Content="Gebruikersnaam:" Grid.Row="1" Margin="0,0,0,5" Foreground="White"/>
        <TextBox x:Name="tbUsername" Grid.Row="1" Width="200" Height="25" Margin="117,3,63,3"/>

        <!--Voornaam-->
        <Label Content="Voornaam:" Grid.Row="2" Margin="0,10,0,5" Foreground="White"/>
        <TextBox x:Name="tbFirstName" Grid.Row="2" Width="200" Height="25" Margin="90,12,90,8"/>

        <!--Achternaam-->
        <Label Content="Achternaam:" Grid.Row="3" Margin="0,10,0,5" Foreground="White"/>
        <TextBox x:Name="tbLastName" Grid.Row="3" Width="200" Height="25" Margin="90,12,90,8"/>

        <!--Email-->
        <Label Content="Email:" Grid.Row="4" Margin="0,10,0,5" Foreground="White"/>
        <TextBox x:Name="tbEmail" Grid.Row="4" Width="200" Height="25" Margin="63,10,117,6"/>

        <!--Wachtwoord-->
        <Label Content="Wachtwoord:" Grid.Row="5" Margin="0,10,0,5" Foreground="White"/>
        <PasswordBox x:Name="pbPassword" Grid.Row="5" Width="200" Height="25" Margin="90,12,90,8"/>

        <!--wachtwoord bevestigen-->
        <Label Content="Bevestig wachtwoord:" Grid.Row="6" Margin="0,10,0,5" Foreground="White"/>
        <PasswordBox x:Name="pbConfirmPassword" Grid.Row="6" Width="200" Height="25" Margin="140,12,40,8"/>

        <StackPanel Grid.Row="7" HorizontalAlignment="Center" Margin="0,20,0,0">
            <!--Registratie knop-->
            <Button x:Name="btnRegister" Content="Account aanmaken" Width="150" Height="30" Click="btnRegister_Click" IsDefault="True"/>

            <!--error message-->
            <TextBlock x:Name="tbError" Foreground="red" FontSize="14" TextAlignment="Center" TextWrapping="Wrap" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
