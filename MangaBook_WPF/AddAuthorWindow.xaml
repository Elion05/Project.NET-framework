<Window x:Class="MangaBook_WPF.AddAuthorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MangaBook_WPF"
        mc:Ignorable="d"
        Title="AddAuthorWindow" Height="500" Width="800" Background="{DynamicResource YaleBlueBrush}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <TextBlock Text="👨‍🏫Auteur Toevoegen" FontSize="34" HorizontalAlignment="Left" Margin="205,48,0,339"/>
        <Label Content="Auteur naam" Margin="118,159,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="LightGray" FontSize="20"/>
        <TextBox x:Name="tbAuteurNaam" Width="300" Height="25" Margin="0,165,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button x:Name="btnAddAuthor" Content="Auteur Toevoegen" Width="150" Height="30" Margin="0,0,339,217" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="btnAddAuthor_Click"/>
        <TextBlock x:Name="tbErrorMessage" Foreground="Red" Margin="0,150,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>




        <Button Content="Sluiten" Margin="632,370,0,0" Click="Button_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Width="76"/>
    </Grid>
</Window>
