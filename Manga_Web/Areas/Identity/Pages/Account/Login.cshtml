@page
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _Localizer
@model LoginModel

@{
    ViewData["Title"] = _Localizer["Inloggen"];
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2>@_Localizer["Gebruik een lokaal account om in te loggen."]</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Username" class="form-control" autocomplete="username" aria-required="true" placeholder="@_Localizer["Gebruikersnaam"]" />
                    <label asp-for="Input.Username" class="form-label">@_Localizer["Gebruikersnaam"]</label>
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="@_Localizer["Wachtwoord"]" />
                    <label asp-for="Input.Password" class="form-label">@_Localizer["Wachtwoord"]</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @_Localizer["Onthoud mij?"]
                    </label>
                </div>

                
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">@_Localizer["Inloggen"]</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">@_Localizer["Wachtwoord vergeten?"]</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">@_Localizer["Registreer als een nieuwe gebruiker"]</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">@_Localizer["Bevestigingsmail opnieuw verzenden"]</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>@_Localizer["Gebruik een andere dienst om in te loggen."]</h3>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            @_Localizer["Er zijn geen externe authenticatiediensten geconfigureerd. Zie dit"]
                            <a href="https://go.microsoft.com/fwlink/?LinkID=532715">@_Localizer["artikel"]</a>
                            @_Localizer["over het instellen van deze ASP.NET-toepassing om inloggen via externe services te ondersteunen."]
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="@_Localizer["Log in met je {0} account", provider.DisplayName]">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
