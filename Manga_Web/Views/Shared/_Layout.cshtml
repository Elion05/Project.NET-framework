<!DOCTYPE html>
@using Microsoft.AspNetCore.Mvc.Localization;
@using System.Linq;

@inject IViewLocalizer Localizer

<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Manga_Web</title>
    <script type="importmap"></script>
    <!-- Vereiste: een ergonomisch verantwoorde frontend gebaseerd op Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Manga_Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        

        <!-- Vereiste: een relevante menu- of tabbladenstructuur -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Manga_Web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@Localizer["Start"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">@Localizer["Privacy"]</a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @Localizer["Verkennen"]
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="MangaBooks" asp-action="Index">@Localizer["Manga Boeken"]</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Authors" asp-action="Index">@Localizer["Auteurs"]</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Genres" asp-action="Index">@Localizer["Genres"]</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Nieuws_Bericht" asp-action="Index">@Localizer["Nieuws"]</a></li>
                                </ul>
                            </li>

                            @if (User.IsInRole("Admin") == true || User.IsInRole("System_Admin") == true)
                            {
                                <!-- Vereiste: gebruikers alleen kunnen zien / gebruiken waar ze rechten toe hebben (menu-structuur) -->
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdownAdmin" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        @Localizer["Admin toegankelijkheden"]
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownAdmin">
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Users" asp-action="Index">@Localizer["Gebruikers beheer"]</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="LogErrors" asp-action="Index">@Localizer["Error logs"]</a></li>
                                    </ul>
                                </li>

                            

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        @Localizer["Voeg nieuwe..."]
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <li><a class="dropdown-item" asp-area="" asp-controller="MangaBooks" asp-action="Create">@Localizer["Voeg boek toe"]</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Authors" asp-action="Create">@Localizer["Voeg nieuwe auteurs toe"]</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Genres" asp-action="Create">@Localizer["Voeg genre toe"]</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Nieuws_Bericht" asp-action="Create">@Localizer["Voeg nieuwsbericht toe"]</a></li>
                                    </ul>
                                </li>
                            }
                        }

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Manga_Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">@Localizer["Privacy"]</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!--AJAX-->
    @Html.RenderUnobtrusiveAjaxScript();
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
