@model MangaBook_Models.MangaBook

@{
    ViewData["Title"] = "Delete";
}

@if (User.IsInRole("Admin") == false)
{
    <script>
        window.location.href = '/Identity/Account/AccessDenied';
    </script>
}

<div class="manga-page-container">
    <h1 class="manga-details-title text-danger">Delete</h1>
    <h3 class="delete-confirmation-text">Are you sure you want to delete this?</h3>
    
    <div>
        <h4>MangaBook</h4>
        <hr />
        <dl class="row details-list">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.IsDeleted)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.IsDeleted)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ReleaseDate)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Author)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Author.Name)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Genre)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Genre.Name)
            </dd>
        </dl>
    
        <form asp-action="Delete" class="manga-page-actions">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
