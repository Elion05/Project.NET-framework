<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Manga_App.ViewModels"
             x:Class="Manga_App.Pages.MangaBookPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="Manga Boeken"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <CollectionView ItemsSource="{Binding MangaBoeken}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5"
                               Padding="10"
                               BorderColor="#ccc"
                               CornerRadius="10"
                               HasShadow="True">
                            <VerticalStackLayout>
                                <Label Text="{Binding Title}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="#222" />
                                <Label Text="{Binding Description}"
                                       FontSize="14"
                                       TextColor="#555"
                                       LineBreakMode="WordWrap" />
                                <Label Text="{Binding ReleaseDate, StringFormat='Publicatiedatum: {0:dd-MM-yyyy}'}"
                                       FontSize="12"
                                       TextColor="#888" />
                                <Label Text="{Binding AverageRating, StringFormat='Rating: {0:F1}'}"
                                       FontSize="12"
                                       TextColor="#888" />
                                <Label Text="{Binding Author.Name, StringFormat='Auteur: {0}'}"
                                       FontSize="12"
                                       TextColor="#888" />
                                <Label Text="{Binding Genre.Name, StringFormat='Genre: {0}'}"
                                       FontSize="12"
                                       TextColor="#888" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
