<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Manga_App.Pages.Nieuws_BerichtPage"
             xmlns:viewmodels="clr-namespace:Manga_App.ViewModels"
             >

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Label Text="Nieuws Berichten"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

          

            <CollectionView ItemsSource="{Binding NieuwsBerichten}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5"
                               Padding="10"
                               BorderColor="#ccc"
                               CornerRadius="10"
                               HasShadow="True">
                            <VerticalStackLayout>
                                <Label Text="{Binding Titel}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="#222" />
                                <Label Text="{Binding Inhoud}"
                                       FontSize="14"
                                       TextColor="#555"
                                       LineBreakMode="WordWrap" />
                                <Label Text="{Binding Datum, StringFormat='Gepubliceerd op: {0:dd-MM-yyyy}'}"
                                       FontSize="12"
                                       TextColor="#888" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>