<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Manga_App.Pages.GenrePage"
             xmlns:viewmodel="clr-namespace:Manga_App.ViewModels">


    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="Genres"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
            <CollectionView ItemsSource="{Binding Genres}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5"
                               Padding="10"
                               BorderColor="#ccc"
                               CornerRadius="10"
                               HasShadow="True">
                            <VerticalStackLayout>
                                <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold" />
                                <Label Text="."/>
                                <Label Text="{Binding genreBeschrijving}" FontSize="14" LineBreakMode="WordWrap" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>




</ContentPage>