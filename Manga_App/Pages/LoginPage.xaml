<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Manga_App.Pages.LoginPage"
             xmlns:viewmodel="clr-namespace:Manga_App.ViewModels"
             x:DataType="viewmodel:LoginViewModel"
             Title="Aanmelden">
    <VerticalStackLayout Padding="20" Spacing="10" VerticalOptions="Center">
        
        <Label 
            Text="Aanmelden"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontSize="25"
            FontAttributes="Bold"
            Margin="0,0,0,25"/>

        <Entry Placeholder="Gebruikersnaam" Text="{Binding UserName}"/>
        <Entry IsPassword="True" Placeholder="Wachtwoord" Text="{Binding Password}"/>

        <HorizontalStackLayout Spacing="10">
            <CheckBox IsChecked="{Binding RememberMe}"/>
            <Label Text="Onthoud mij" VerticalOptions="Center"/>
        </HorizontalStackLayout>

        <Button Text="Aanmelden" Command="{Binding LoginCommand}" Margin="0,10,0,0"/>
        <Label Text="{Binding Message}" TextColor="Red" IsVisible="{Binding IsMessageVisible}" HorizontalOptions="Center" Margin="10"/>
        
    </VerticalStackLayout>
</ContentPage>