<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Manga_App.Pages.ProfielPage"
             xmlns:viewmodel="clr-namespace:Manga_App.ViewModels">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Profielpagina" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />
        <Label Text="Voornaam:" FontAttributes="Bold"/>
        <Label Text="{Binding FirstName}" />
        <Label Text="Achternaam:" FontAttributes="Bold"/>
        <Label Text="{Binding LastName}" />
        <Label Text="Gebruikersnaam:" FontAttributes="Bold"/>
        <Label Text="{Binding Username}" />
        <Label Text="Email:" FontAttributes="Bold"/>
        <Label Text="{Binding Email}" />
    </VerticalStackLayout>
</ContentPage>